<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Recipe</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Edit This Recipe</h1>
    <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
        <label for="name">Name:</label><br>
        <input value="<%= recipe.name %>" type="text" name="name" id="name" /><br>

        <label for="instructions">Instructions:</label><br>
        <input value="<%= recipe.instructions %>" type="text" name="instructions" id="instructions" /><br>

        <label for="ingredients">Ingredients:</label><br>
        <select name="ingredients" id="ingredients" multiple>
            <% ingredients.forEach(ingredient => { %>
                <option value="<%= ingredient._id %>" <%= recipe.ingredients.includes(ingredient._id) ? "selected" : "" %>><%= ingredient.name %></option>
            <% }) %>
        </select>

        <button type="submit">Edit Recipe</button>
    </form>
</body>
</html>